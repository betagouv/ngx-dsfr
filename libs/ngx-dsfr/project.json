{
  "projectType": "library",
  "sourceRoot": "libs/ngx-dsfr/src",
  "prefix": "dsfr",
  "targets": {
    "build-base": {
      "executor": "@nrwl/angular:package",
      "outputs": [
        "dist/libs/ngx-dsfr"
      ],
      "options": {
        "project": "libs/ngx-dsfr/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/ngx-dsfr/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/ngx-dsfr/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "adapt-css-paths": {
      "executor": "@ngx-dsfr/architect:adapt-css-paths",
      "dependsOn": [
        "build-base"
      ],
      "outputs": [
        "dist/libs/ngx-dsfr"
      ],
      "options": {
        "directory": "assets/icons"
      }
    },
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "dependsOn": [
        "adapt-css-paths"
      ],
      "options": {
        "commands": [
          "sass core-styling.scss core-styling.css --load-path=../../../../../node_modules",
          "rm core-styling.scss"
        ],
        "cwd": "dist/libs/ngx-dsfr/assets/styling",
        "parallel": false
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "coverage/libs/ngx-dsfr"
      ],
      "options": {
        "jestConfig": "libs/ngx-dsfr/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "libs/ngx-dsfr/src/**/*.ts",
          "libs/ngx-dsfr/src/**/*.html",
          "libs/ngx-dsfr/link/**/*.ts",
          "libs/ngx-dsfr/link/**/*.html"
        ]
      }
    }
  },
  "tags": []
}
